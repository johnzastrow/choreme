# Caddyfile for ChoreMe reverse proxy
# Uncomment and modify the domain section for production use

# Development/local setup
:80 {
    reverse_proxy choreme:8080
}

# Production setup (uncomment and modify)
# choreme.yourdomain.com {
#     reverse_proxy choreme:8080
#     
#     # Enable compression
#     encode gzip
#     
#     # Security headers
#     header {
#         # Enable HSTS
